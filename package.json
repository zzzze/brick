{
  "name": "brick",
  "version": "0.0.1",
  "description": "A web page editor.",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "webpack serve",
    "prettier": "prettier -w .",
    "test": "jest",
    "type-check": "tsc --project tsconfig.eslint.json",
    "build:dev": "webpack --progress",
    "build": "rollup --config",
    "lint": "eslint ./",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages --out=storybook-static",
    "rollup": "rollup --config"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npm run type-check && npm run lint && npm run test"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-typescript": "^8.1.1",
    "@storybook/addon-actions": "^6.1.17",
    "@storybook/addon-essentials": "^6.1.17",
    "@storybook/addon-links": "^6.1.17",
    "@storybook/react": "^6.1.17",
    "@storybook/storybook-deployer": "^2.8.7",
    "@testing-library/jest-dom": "^5.11.9",
    "@types/babel__standalone": "^7.1.3",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "add": "^2.0.6",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-lodash": "^3.3.4",
    "commitizen": "^4.2.3",
    "crypto": "^1.0.1",
    "cz-conventional-changelog": "3.3.0",
    "enzyme": "^3.11.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "glob": "^7.1.6",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jest-enzyme": "^7.1.2",
    "jsonml.js": "^0.1.0",
    "lerna": "^3.22.1",
    "lodash-webpack-plugin": "^0.11.6",
    "mark-twain": "^2.0.3",
    "prettier": "^2.2.1",
    "rollup": "^2.38.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.17.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2",
    "yarn": "^1.22.10"
  },
  "dependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "eventemitter3": "^4.0.7",
    "lodash": "^4.17.20",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
